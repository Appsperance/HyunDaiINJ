<UserControl x:Class="HyunDaiINJ.Views.Monitoring.Controls.Process.ProcessProducer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HyunDaiINJ.Views.Monitoring.Controls.Process"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="#444" CornerRadius="5" Margin="10">
            <Image Stretch="Fill" Grid.Row="0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Source="{Binding MyVM.CurrentImage}" />
        </Border>

        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" DataContext="{Binding MyVM}">
            <!-- 투입 -->
            <Border Style="{StaticResource FirstIsInputType}" BorderBrush="Black" BorderThickness="1" CornerRadius="3" Width="160" Height="40" Margin="5">
                <TextBlock Text="투입" VerticalAlignment="Center" FontSize="30" HorizontalAlignment="Center" Foreground="Black" FontWeight="Bold" />
            </Border>

            <!-- 비전 -->
            <Border Style="{StaticResource SecondHeatingType}" BorderBrush="Black" BorderThickness="1" Width="160" Height="40" Margin="5">
                <TextBlock Text="가열" VerticalAlignment="Center" FontSize="30" HorizontalAlignment="Center" Foreground="Black" FontWeight="Bold"/>
            </Border>

            <!-- 완료 -->
            <Border Style="{StaticResource LastTakeOutStyle}" BorderBrush="Black" BorderThickness="1" Width="160" Height="40" Margin="5">
                <TextBlock Text="취출" VerticalAlignment="Center" FontSize="30" HorizontalAlignment="Center" Foreground="Black" FontWeight="Bold"/>
            </Border>
        </StackPanel>


    </Grid>
</UserControl>
