<Window x:Class="HyunDaiINJ.Views.Monitoring.Controls.Vision.NgCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vision="clr-namespace:HyunDaiINJ.Views.Monitoring.Controls.Vision"
        xmlns:local="clr-namespace:HyunDaiINJ.Views.Monitoring.Controls.Vision"
        mc:Ignorable="d"
        Title="자세히보기" Height="541" Width="533">
    <Grid Background="#F0F0F0" Margin="10">
        <!-- Grid 레이아웃 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <!-- 선택된 이미지 -->
            <RowDefinition Height="*" />
            <!-- 이미지 리스트 -->
        </Grid.RowDefinitions>

        <!-- 선택된 이미지 표시 영역 -->
        <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
            <Image x:Name="SelectedImage" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>

        <!-- 이미지 리스트 영역 -->
        <ListView Grid.Row="1" x:Name="ImageListView" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5" Margin="5">
                        <!-- 기존: <Image Source="{Binding}" Width="100" Height="100" ... /> -->
                        <vision:LazyImageControl SourcePath="{Binding}"
                                     Width="100" Height="100" Cursor="Hand"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
