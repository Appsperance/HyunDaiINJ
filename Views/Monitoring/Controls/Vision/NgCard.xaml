<UserControl x:Class="HyunDaiINJ.Views.Monitoring.Controls.Vision.NgCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F0F0F0" Margin="10">
        <!-- Grid 레이아웃 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <!-- 선택된 이미지 -->
            <RowDefinition Height="*" />
            <!-- 이미지 리스트 -->
        </Grid.RowDefinitions>

        <!-- 선택된 이미지 표시 영역 -->
        <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
            <Image x:Name="SelectedImage" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>

        <!-- 이미지 리스트 영역 -->
        <ListView Grid.Row="1" x:Name="ImageListView" Margin="10"
                  ScrollViewer.VerticalScrollBarVisibility="Auto" 
                  SelectionChanged="ImageListView_SelectionChanged">
            <ListView.ItemsPanel>
                <!-- WrapPanel을 사용하여 이미지를 가로로 나열 -->
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <!-- 개별 이미지 항목을 Border로 감쌈 -->
                <DataTemplate>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5" Margin="5">
                        <Image Source="{Binding}" Width="100" Height="100" Cursor="Hand" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
