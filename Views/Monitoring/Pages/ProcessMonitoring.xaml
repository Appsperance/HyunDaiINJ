<Page x:Class="HyunDaiINJ.Views.Monitoring.Pages.ProcessMonitoring"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:First="clr-namespace:HyunDaiINJ.Views.Monitoring.Controls.FirstSection"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1350"
      Title="ProcessMonitoring">

    <Grid Background="#F0F0F0">

        <Grid Background="#F0F0F0" Margin="10">
            <Grid.RowDefinitions>
                <!-- Header Rows -->
                <RowDefinition Height="120" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 현재 총 생산량 -->
            <Border Grid.Row="0" Grid.Column="0"  Margin="10" Background="#002E6B" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="품목 총 생산 수량" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center" />

                    <TextBlock Text="10000개"
                               Grid.Row="1" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="28"/>
                </Grid>
            </Border>

            <!-- 두 번째 그리드 -->
            <Border Grid.Row="0" Grid.Column="1"  Margin="10" Background="#002E6B" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="품목 총 생산 수량" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center" />

                    <TextBlock Text="10000개"
                               Grid.Row="1" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="28"/>
                </Grid>
            </Border>

            <!-- 세 번째 그리드 -->
            <Border Grid.Row="0" Grid.Column="2"  Margin="10" Background="#002E6B" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="품목 총 생산 수량" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center" />

                    <TextBlock Text="10000개"
                               Grid.Row="1" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="28"/>
                </Grid>
            </Border>

            <!-- 네 번째 그리드 -->
            
            <Grid Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="0">
                <!-- 현재 시간 -->
                <Border Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Margin="10" Background="#002E6B" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="현재시간" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Center" />

                        <TextBlock Text="2024-12-29 일요일 21시52분"
                                   Grid.Row="1" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="28"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
