<Page x:Class="HyunDaiINJ.Views.Monitoring.Pages.Monitoring.VisionMonitoring"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vision="clr-namespace:HyunDaiINJ.Views.Monitoring.Controls.Vision"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1350"
      Title="VisionMonitoring">

    <!-- 
        Page의 Code-behind(VisionMonitoring.xaml.cs)에서
        this.DataContext = this;
        => VisionVM1, VisionVM2, VisionVM3, VisionVM4, VisionVM5 프로퍼티 사용 가능
    -->

    <Grid Background="#1F1F1F">

        <!-- 행, 열 정의 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- ======================  헤더(비전1)  ====================== -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="5" Grid.ColumnSpan="3">
            <materialDesign:PackIcon Foreground="#95C0FF" Kind="CircleOutline" Height="30" Width="40" VerticalAlignment="Center"/>
            <TextBlock Text="비전 1"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#95C0FF"
                       Margin="10,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ======================  헤더(비전2)  ====================== -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="9" Margin="5" Grid.ColumnSpan="3">
            <materialDesign:PackIcon Foreground="#95C0FF" Kind="CircleOutline" Height="30" Width="40" VerticalAlignment="Center"/>
            <TextBlock Text="비전 2"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#95C0FF"
                       Margin="10,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ======================  헤더(비전3)  ====================== -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="5" Grid.ColumnSpan="3">
            <materialDesign:PackIcon Foreground="#95C0FF" Kind="CircleOutline" Height="30" Width="40" VerticalAlignment="Center"/>
            <TextBlock Text="비전 3"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#95C0FF"
                       Margin="10,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ======================  헤더(비전4)  ====================== -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="9" Margin="5" Grid.ColumnSpan="3">
            <materialDesign:PackIcon Foreground="#95C0FF" Kind="CircleOutline" Height="30" Width="40" VerticalAlignment="Center"/>
            <TextBlock Text="비전 4"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#95C0FF"
                       Margin="10,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ======================  헤더(비전5)  ====================== -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0" Margin="5" Grid.ColumnSpan="3">
            <materialDesign:PackIcon Foreground="#95C0FF" Kind="CircleOutline" Height="30" Width="40" VerticalAlignment="Center"/>
            <TextBlock Text="비전 5"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#95C0FF"
                       Margin="10,0"
                       VerticalAlignment="Center"/>
        </StackPanel>


        <!-- ===================================================================== -->
        <!-- ======================  비전1 영역  ====================== -->
        <!-- ===================================================================== -->

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5"
                BorderBrush="#95C0FF" BorderThickness="4" CornerRadius="5"
                Margin="5"
                DataContext="{Binding VisionVM1}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- (1) VisionProcedure : StageValImage 표시 -->
                <Border Grid.Row="0"
                        BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                        Margin="5">
                    <vision:VisionProcedure />
                </Border>

                <!-- (2) 검사 개수 (현재는 고정 텍스트) -->
                <TextBlock Grid.Row="1"
                           Text="검사 개수: 30 / 2000"
                           HorizontalAlignment="Center"
                           Margin="10"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#95C0FF"/>

                <!-- (3) 버튼 영역 (깜빡임) -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- 투입 -->
                    <Border Style="{StaticResource InputBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="투입"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <!-- 비전 -->
                    <Border Style="{StaticResource VisionBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="비전"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <!-- 완료 -->
                    <Border Style="{StaticResource CompleteBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="완료"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>


        <!-- ===================================================================== -->
        <!-- ======================  비전2 영역  ====================== -->
        <!-- ===================================================================== -->

        <Border Grid.Row="1" Grid.Column="9" Grid.ColumnSpan="5"
                BorderBrush="#95C0FF" BorderThickness="4" CornerRadius="5"
                Margin="5"
                DataContext="{Binding VisionVM2}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                        Margin="5">
                    <vision:VisionProcedure />
                </Border>

                <TextBlock Grid.Row="1"
                           Text="검사 개수: 30 / 2000"
                           HorizontalAlignment="Center"
                           Margin="10"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#95C0FF"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Style="{StaticResource InputBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="투입"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Style="{StaticResource VisionBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="비전"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Style="{StaticResource CompleteBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="완료"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>


        <!-- ===================================================================== -->
        <!-- ======================  비전3 영역  ====================== -->
        <!-- ===================================================================== -->

        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5"
                BorderBrush="#95C0FF" BorderThickness="4" CornerRadius="5"
                Margin="5"
                DataContext="{Binding VisionVM3}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                        Margin="5">
                    <vision:VisionProcedure />
                </Border>

                <TextBlock Grid.Row="1"
                           Text="검사 개수: 30 / 2000"
                           HorizontalAlignment="Center"
                           Margin="10"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#95C0FF"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Style="{StaticResource InputBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="투입"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Style="{StaticResource VisionBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="비전"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Style="{StaticResource CompleteBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="완료"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>


        <!-- ===================================================================== -->
        <!-- ======================  비전4 영역  ====================== -->
        <!-- ===================================================================== -->

        <Border Grid.Row="3" Grid.Column="9" Grid.ColumnSpan="5"
                BorderBrush="#95C0FF" BorderThickness="4" CornerRadius="5"
                Margin="5"
                DataContext="{Binding VisionVM4}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                        Margin="5">
                    <vision:VisionProcedure />
                </Border>

                <TextBlock Grid.Row="1"
                           Text="검사 개수: 30 / 2000"
                           HorizontalAlignment="Center"
                           Margin="10"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#95C0FF"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Style="{StaticResource InputBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="투입"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Style="{StaticResource VisionBlinkingStyle}" 
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="비전"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Style="{StaticResource CompleteBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="완료"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>


        <!-- ===================================================================== -->
        <!-- ======================  비전5 영역  ====================== -->
        <!-- ===================================================================== -->

        <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="5"
                BorderBrush="#95C0FF" BorderThickness="4" CornerRadius="5"
                Margin="5"
                DataContext="{Binding VisionVM5}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                        Margin="5">
                    <vision:VisionProcedure />
                </Border>

                <TextBlock Grid.Row="1"
                           Text="검사 개수: 30 / 2000"
                           HorizontalAlignment="Center"
                           Margin="10"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#95C0FF"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Style="{StaticResource InputBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="투입"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Style="{StaticResource VisionBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="비전"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Style="{StaticResource CompleteBlinkingStyle}"
                            BorderBrush="Black" BorderThickness="1"
                            CornerRadius="3"
                            Width="60" Height="40" Margin="5">
                        <TextBlock Text="완료"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>


        <!-- ===================================================================== -->
        <!-- 품질 사진 1 (비전1) -->
        <!-- ===================================================================== -->

        <Border Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="4"
                BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                Margin="5" Cursor="Hand"
                MouseLeftButtonDown="Border_MouseLeftButtonDown"
                DataContext="{Binding VisionVM1}">
            <Grid>
                <Image Source="{Binding CurrentImage}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Stretch="UniformToFill"/>
            </Grid>
        </Border>

        <!-- 품질 사진 2 (비전2) -->
        <Border Grid.Row="1" Grid.Column="14" Grid.ColumnSpan="4"
                BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                Margin="5" Cursor="Hand"
                MouseLeftButtonDown="Border_MouseLeftButtonDown"
                DataContext="{Binding VisionVM2}">
            <Grid>
                <Image Source="{Binding CurrentImage}"
                       Stretch="UniformToFill"/>
            </Grid>
        </Border>

        <!-- 품질 사진 3 (비전3) -->
        <Border Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="4"
                BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                Margin="5" Cursor="Hand"
                MouseLeftButtonDown="Border_MouseLeftButtonDown"
                DataContext="{Binding VisionVM3}">
            <Grid>
                <Image Source="{Binding CurrentImage}"
                       Stretch="UniformToFill"/>
            </Grid>
        </Border>

        <!-- 품질 사진 4 (비전4) -->
        <Border Grid.Row="3" Grid.Column="14" Grid.ColumnSpan="4"
                BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                Margin="5" Cursor="Hand"
                MouseLeftButtonDown="Border_MouseLeftButtonDown"
                DataContext="{Binding VisionVM4}">
            <Grid>
                <Image Source="{Binding CurrentImage}"
                       Stretch="UniformToFill"/>
            </Grid>
        </Border>

        <!-- 품질 사진 5 (비전5) -->
        <Border Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="4"
                BorderBrush="#95C0FF" BorderThickness="2" CornerRadius="5"
                Margin="5" Cursor="Hand"
                MouseLeftButtonDown="Border_MouseLeftButtonDown"
                DataContext="{Binding VisionVM5}">
            <Grid>
                <Image Source="{Binding CurrentImage}"
                       Stretch="UniformToFill"/>
            </Grid>
        </Border>

    </Grid>
</Page>
