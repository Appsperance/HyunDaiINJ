<Page x:Class="HyunDaiINJ.Views.Monitoring.Pages.Monitoring"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      xmlns:chart="clr-namespace:HyunDaiINJ.Views.Monitoring.Controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:HyunDaiINJ.ViewModels.MQTT"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      d:DesignHeight="750" d:DesignWidth="1350">

    <Page.DataContext>
        <vm:MqttViewModel/>
    </Page.DataContext>

    <Grid Background="#2B2B2B" Margin="10">
        <Grid.RowDefinitions>
            <!-- Header Rows -->
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 첫 번째 그리드: OEE 설비종합효율 -->
        <Border Grid.Row="0" Grid.Column="0" Margin="10" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="현재 총 생산량" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,5,0,0"
                       HorizontalAlignment="Center" />

                <chart:GaugeChart Height="160" Grid.Row="1" Padding="2"/>
            </Grid>
        </Border>

        <!-- 두 번째 그리드 -->
        <Border Grid.Row="0" Grid.Column="1" Margin="10" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="????" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       Margin="0,5,0,0" 
                       HorizontalAlignment="Center" />

                <chart:GaugeChart Height="160" Grid.Row="1" Padding="2"/>
            </Grid>
        </Border>

        <!-- 세 번째 그리드 -->
        <Border Grid.Row="0" Grid.Column="2" Margin="10" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="????" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,5,0,0"
                       HorizontalAlignment="Center" />

                <chart:GaugeChart Height="160" Grid.Row="1" Padding="2"/>
            </Grid>
        </Border>

        <!-- 네 번째 그리드 -->
        <Border Grid.Row="0" Grid.Column="3" Margin="10" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="라인 담당자" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,5,0,0"
                       HorizontalAlignment="Center" />

                <ListView Grid.Row="1" ItemsSource="{Binding DowntimeData}"  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.View>
                        <GridView>
                            <!-- 시간(분) Column -->
                            <GridViewColumn Header="라인1">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="라인1" 
                                                   FontWeight="Bold" 
                                                   Foreground="#00BFFF" 
                                                   HorizontalAlignment="Left" 
                                                   VerticalAlignment="Center"
                                                   FontSize="12" 
                                                    />
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Time}" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- 비가동 원인 Column -->
                            <GridViewColumn Header="나굳셈">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="나굳셈" 
                                                   FontWeight="Bold" 
                                                   Foreground="#00BFFF" 
                                                   HorizontalAlignment="left" 
                                                   VerticalAlignment="Center"
                                                   FontSize="12" 
                                                   Margin="0,2,0,2" />
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Cause}" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <Grid Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 네 번째 그리드 -->
            <Border Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Margin="10" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="현재시간" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center" />

                    <TextBlock Text="2024-12-29 일요일 21시52분"
                               Grid.Row="1" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="28"/>
                </Grid>
            </Border>

            <!-- 네 번째 그리드 -->
            <Border Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Margin="10" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="품목 총 생산 수량" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center" />

                    <TextBlock Text="10000개"
                               Grid.Row="1" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="28"/>
                </Grid>
            </Border>
        </Grid>

        <!-- 두 번째 행 -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6">
            <!-- 두 번째 행 -->
            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>


                <!-- 생산라인 현황 -->
                <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="생산라인 현황" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="5"
                                   HorizontalAlignment="Center" />

                        <!-- 3개의 그룹 -->
                        <Grid Grid.Row="1" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- 첫 번째 그룹 -->
                            <Grid Grid.Row="0" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FF4CAF50" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="투입" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="1" Background="#FF9800" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="가열" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="2" Background="#F44336" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="취출" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </Grid>

                            <!-- 두 번째 그룹 -->
                            <Grid Grid.Row="1" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FF4CAF50" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="투입" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="1" Background="#FF9800" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="가열" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="2" Background="#F44336" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="취출" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </Grid>

                            <!-- 세 번째 그룹 -->
                            <Grid Grid.Row="2" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FF4CAF50" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="투입" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="1" Background="#FF9800" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="가열" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="2" Background="#F44336" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="취출" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>


                <!-- 생산실적 발생현황 -->
                <Border Grid.Column="1" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="현재 생산량" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="5"
                                   HorizontalAlignment="Center" />

                        <!-- 차트 자리-->
                        
                    </Grid>
                </Border>

                <!-- 생산실적 발생현황 -->
                <Border Grid.Column="2" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="현재 생산량" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="5"
                                   HorizontalAlignment="Center" />

                        <!-- 차트 자리-->
                        <chart:DoughnutChart Grid.Row="1"/>

                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- 세 번째 행 -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6">
            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <!-- 품질 라인 현황 -->
                <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5,5,5,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="품질라인 현황" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="5"
                                   HorizontalAlignment="Center" />

                        <!-- 3개의 그룹 -->
                        <Grid Grid.Row="1" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- 첫 번째 그룹 -->
                            <Grid Grid.Row="0" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FF4CAF50" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="투입" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <Border Grid.Column="1" Background="#FF9800" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="가열" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <Border Grid.Column="2" Background="#F44336" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="취출" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </Grid>

                            <!-- 두 번째 그룹 -->
                            <Grid Grid.Row="1" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FF4CAF50" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="투입" FontSize="16" FontWeight="Bold" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <Border Grid.Column="1" Background="#FF9800" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="가열" FontSize="16" FontWeight="Bold" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <Border Grid.Column="2" Background="#F44336" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="취출" FontSize="16" FontWeight="Bold" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </Grid>

                            <!-- 세 번째 그룹 -->
                            <Grid Grid.Row="2" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FF4CAF50" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="투입" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <Border Grid.Column="1" Background="#FF9800" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="가열" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <Border Grid.Column="2" Background="#F44336" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5">
                                    <TextBlock Text="취출" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>





                <!-- 품질 사진 -->
                <Border Grid.Column="1" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5,5,5,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="품질 사진" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="5"
                                   HorizontalAlignment="Center" />

                        <!-- 품질 이미지 -->
                        <Image Source="{Binding CurrentImage}" Width="800" Height="800" Stretch="Uniform"/>
                    </Grid>
                </Border>

                <!-- 품질 발생현황 -->
                <Border Grid.Column="2" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="5" Margin="5,5,5,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="품질 현황" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="5"
                                   HorizontalAlignment="Center" />

                        <!-- 차트 자리 -->

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
