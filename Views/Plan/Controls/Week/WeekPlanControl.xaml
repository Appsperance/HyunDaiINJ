<UserControl x:Class="HyunDaiINJ.Views.Plan.Controls.Week.WeekPlanControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1350">

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="35" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 상단 "총 계획" 헤더 -->
        <Grid Grid.Row="0" Margin="5" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <materialDesign:PackIcon Foreground="#002E6B" Kind="CircleOutline" Height="20" Width="40" VerticalAlignment="Center"/>
                <TextBlock Text="총 계획"
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#002E6B" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 밑줄 -->
        <Border Grid.ColumnSpan="7" Background="#002E6B" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,3" />

        <!-- 상단 "제품명" 레이블 -->
        <StackPanel Orientation="Horizontal" 
                    Grid.Row="1" 
                    Margin="5" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <TextBlock Text="제품명"
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#002E6B" 
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- "주 계획" 레이블 -->
        <StackPanel Orientation="Horizontal" 
                    Grid.Row="3" 
                    Margin="5">
            <materialDesign:PackIcon Foreground="#002E6B" Kind="CircleOutline" Height="20" Width="40" VerticalAlignment="Center"/>
            <TextBlock Text="주 계획"
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#002E6B" 
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 제품 입력(ItemsControl) -->
        <ItemsControl Grid.Row="1"
                      Grid.RowSpan="2"
                      Grid.Column="1" 
                      Grid.ColumnSpan="4"
                      Margin="5"
                      ItemsSource="{Binding PartInfoList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="3"
                            BorderBrush="#444"
                            BorderThickness="1"
                            CornerRadius="5" 
                            Background="Transparent">
                        <!-- PartName 텍스트박스 -->
                        <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="120"
                                 FontSize="13" 
                                 Foreground="Black" 
                                 FontWeight="Bold"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 열추가 버튼 -->
        <Button Grid.Column="5"
                Margin="3,2,3,5"
                Content="열추가"
                Background="#3670c4"
                Foreground="White"
                FontWeight="Bold"
                Width="150"
                Height="26"
                Command="{Binding PlusLineCommand}"/>

        <!-- 열삭제 버튼 -->
        <Button Grid.Column="6"
                Margin="3,2,3,5"
                Content="열삭제"
                Background="#e75151"
                Foreground="White"
                FontWeight="Bold"
                Width="150"
                Height="26"
                BorderBrush="#eb7a7a"
                Command="{Binding MinusLineCommand}"/>

        <!-- 저장 버튼 -->
        <Button Content="저장"
                Width="100"
                Margin="5"
                Height="50"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="5"
                Background="#3670c4"
                Foreground="White"
                FontWeight="Bold"
                FontSize="20"
                Command="{Binding SaveAllInsertCommand}" />

        <!-- DataGrid (Row=4,5) -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.Row="4"
                      Grid.ColumnSpan="7"
                      Grid.RowSpan="2">
            <DataGrid x:Name="WeekDataGrid"
                      ItemsSource="{Binding WeekPlanRows}"
                      AutoGenerateColumns="False"
                      Margin="10"
                      CanUserSortColumns="True"
                      CellEditEnding="WeekDataGrid_CellEditEnding" />
        </ScrollViewer>

        <!-- 하단 합계 영역 (Row=6) -->
        <Grid Grid.Row="6" Background="#E0E0E0" Grid.ColumnSpan="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- "계획 총합" 라벨 -->
                <ColumnDefinition Width="*"   />
                <!-- 합계 Values -->
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 라벨: "계획 총합" -->
            <TextBlock Text="계획 총합"
               FontWeight="Bold"
               Foreground="Navy"
               Margin="10"
               VerticalAlignment="Center"/>

            <!-- 오른쪽: 합계를 나열 (ItemsControl) -->
            <ItemsControl Grid.Column="1"
                  ItemsSource="{Binding SumDict}"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- 옆으로 나란히 표시 -->
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Key: PartName, Value: 합계 -->
                        <StackPanel Orientation="Horizontal">
                            <!-- 파트 이름이 필요하면 아래처럼도 표시 가능:
                    <TextBlock Text="{Binding Key}" Margin="5,0,0,0" Foreground="Navy"/>
                    -->
                            <TextBlock Text="{Binding Value}"
                               Margin="20,0,0,0"
                               Foreground="Navy"
                               FontWeight="Bold"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
