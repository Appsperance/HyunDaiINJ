<UserControl x:Class="HyunDaiINJ.Views.Plan.Controls.Week.WeekPlanControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1350">

    <Grid Background="#1F1F1F">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="35" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 상단 "총 계획" 헤더 -->
        <Grid Grid.Row="0" Margin="5" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <materialDesign:PackIcon Foreground="#95C0FF" Kind="CircleOutline" Height="20" Width="40" VerticalAlignment="Center"/>
                <TextBlock Text="총 계획"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#95C0FF"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 밑줄 -->
        <Border Grid.ColumnSpan="7" Background="#95C0FF" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,3" />

        <!-- 상단 "제품명" 레이블 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Margin="5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="제품명"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#95C0FF"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- "주 계획" 레이블 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="3"
                    Margin="5">
            <materialDesign:PackIcon Foreground="#95C0FF" Kind="CircleOutline" Height="20" Width="40" VerticalAlignment="Center"/>
            <TextBlock Text="주 계획"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#95C0FF"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 제품 입력(ItemsControl) -->
        <ItemsControl Grid.Row="1"
                      Grid.RowSpan="2"
                      Grid.Column="1"
                      Grid.ColumnSpan="5"
                      Margin="5"
                      ItemsSource="{Binding PartInfoList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="3"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="Transparent">
                        <!-- PartName 텍스트박스 -->
                        <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="120"
                                 FontSize="13"
                                 Foreground="#95C0FF"
                                 VerticalAlignment="Stretch"
                                 HorizontalContentAlignment="Center"
                                 FontWeight="Bold"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 열추가 버튼 -->
        <Button Grid.Column="5"
                Margin="3,2,3,5"
                Content="열추가"
                Background="#3670c4"
                Foreground="White"
                FontWeight="Bold"
                Width="180"
                Height="26"
                Command="{Binding PlusLineCommand}"/>

        <!-- 열삭제 버튼 -->
        <Button Grid.Column="6"
                Margin="3,2,0,5"
                Content="열삭제"
                Background="#e75151"
                Foreground="White"
                FontWeight="Bold"
                Width="180"
                Height="26"
                BorderBrush="#eb7a7a"
                Command="{Binding MinusLineCommand}"/>

        <!-- 저장 버튼 -->
        <Button Content="저장"
                Width="100"
                Margin="5"
                Height="50"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="6"
                Background="#3670c4"
                Foreground="White"
                FontWeight="Bold"
                FontSize="20"
                Command="{Binding SaveAllInsertCommand}" />

        <!-- DataGrid (Row=4,5) -->
        <!-- DataGrid -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.Row="4"
                      Grid.ColumnSpan="7"
                      Grid.RowSpan="2">
            <DataGrid x:Name="WeekDataGrid"
                      ItemsSource="{Binding WeekPlanRows}"
                      AutoGenerateColumns="False"
                      Background="#1F1F1F"
                      Foreground="#95C0FF"
                      VerticalGridLinesBrush="#404040"
                      HorizontalGridLinesBrush="#404040"
                      Margin="10"
                      CanUserSortColumns="True"
                      CellEditEnding="WeekDataGrid_CellEditEnding">
                <!-- Header Alignment -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader"  BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="#1F1F1F"/>
                        <Setter Property="Foreground" Value="#95C0FF"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell"  BasedOn="{StaticResource MaterialDesignDataGridCell}">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="#1F1F1F"/>
                        <Setter Property="Foreground" Value="#95C0FF"/>
                    </Style>
                </DataGrid.CellStyle>

            </DataGrid>
        </ScrollViewer>

        <!-- 하단 합계 영역 (Row=6) -->
        <Grid Grid.Row="6" Background="#1F1F1F" Grid.ColumnSpan="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- "계획 총합" 라벨 (Width 지정) -->
                <ColumnDefinition Width="*"/>
                <!-- 합계 Values -->
            </Grid.ColumnDefinitions>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- 왼쪽 라벨: "계획 총합" -->
                <TextBlock Text="제품별 계획 총합"
                           FontWeight="Bold"
                           Foreground="#95C0FF"
                           Margin="40,0,0,0"
                           VerticalAlignment="Center" 
                           Width="195"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- 합계 항목들 -->
            <ItemsControl Grid.Column="1"
                          ItemsSource="{Binding SumDict}"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Value}"
                                       Margin="20,0,0,0"
                                       Foreground="#95C0FF"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Width="180"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>