<Window x:Class="HyunDaiINJ.Views.Login.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:vm="clr-namespace:HyunDaiINJ.ViewModels.Login"
        mc:Ignorable="d"
        Title="LoginView" Height="750" Width="1350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <!-- ViewModel을 Window의 DataContext로 지정 -->
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid>
        <!-- 배경 Border --><!--
        <Border CornerRadius="12">
            <Border.Background>
                <ImageBrush ImageSource="/Images/LoginView.jpg" Stretch="Fill"/>
            </Border.Background>
        </Border>-->

        <!-- 내부 Border -->
        <Border CornerRadius="10" BorderThickness="1" Opacity="0.7">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#66BFFF" Offset="0"/>
                    <GradientStop Color="#3399FF" Offset="0.5"/>
                    <GradientStop Color="#005CBF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#1E88E5" Offset="0"/>
                    <GradientStop Color="#1565C0" Offset="0.5"/>
                    <GradientStop Color="#0D47A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Grid 구조 -->
            <Grid>
                <!-- 헤더 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <!-- 제목 -->
                    <!--<TextBlock Text="LOG IN"
                               Foreground="DarkGray"
                               FontSize="20"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>-->
                </Grid>

                <!-- 메인 콘텐츠 -->
                <StackPanel Grid.Row="1" Width="600" Orientation="Vertical" Margin="0,35,0,0" HorizontalAlignment="Center">
                    <!-- 로고 -->
                    <Image Source="/Images/Logo2.png" Width="250" Height="250" Margin="0"/>

                    <!-- 사용자 입력 -->
                    <StackPanel Orientation="Vertical" Width="400">
                        <!-- Username 섹션 -->
                        <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                            <TextBlock Text="Username"
                                       Foreground="DarkGray"
                                       FontSize="20"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="10,0,0,5"/>
                            <Grid VerticalAlignment="Center" Width="400" Height="50">
                                <!-- 왼쪽 아이콘 -->
                                <fa:ImageAwesome Icon="User" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="Gray" 
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="10,0"/>
                                <!-- Username 텍스트박스 -->
                                <TextBox x:Name="txtUser"
                                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalAlignment="Center"
                                         FontSize="20"
                                         FontFamily="Montserrat"
                                         Foreground="White"
                                         CaretBrush="Gray"
                                         BorderBrush="DarkGray"
                                         BorderThickness="0,0,0,1"
                                         Margin="70,0,10,0"
                                         Background="Transparent"/>
                            </Grid>
                        </StackPanel>

                        <!-- Password 섹션 -->
                        <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                            <TextBlock Text="Password"
                                       Foreground="DarkGray"
                                       FontSize="20"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="10,0,0,5"/>
                            <Grid VerticalAlignment="Center" Width="400" Height="50">
                                <!-- 왼쪽 아이콘 -->
                                <fa:ImageAwesome Icon="Key" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="Gray" 
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="10,0"/>
                                <!-- Password 텍스트박스 -->
                                <PasswordBox x:Name="txtPassword"
                                             VerticalAlignment="Center"
                                             FontSize="20"
                                             FontFamily="Montserrat"
                                             Foreground="White"
                                             CaretBrush="Gray"
                                             BorderBrush="DarkGray"
                                             BorderThickness="0,0,0,1"
                                             Margin="70,0,10,0"
                                             Background="Transparent"/>
                            </Grid>
                        </StackPanel>

                        <!-- 로그인 버튼 -->
                        <Button x:Name="BtnLogin" 
                                Content="LOG IN"
                                Style="{StaticResource LoginButtonStyle}"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Click="BtnLogin_Click" Width="205"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
