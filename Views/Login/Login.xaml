<Window x:Class="HyunDaiINJ.Views.Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HyunDaiINJ.Views.Login"
        xmlns:vm="clr-namespace:HyunDaiINJ.ViewModels.Login"
        mc:Ignorable="d"
        Title="Login"
        Height="750"
        Width="1350"
        WindowStartupLocation="CenterScreen">

    <!-- ViewModel을 Window의 DataContext로 지정 -->
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid Background="#EFEFEF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Grid.Column="1" 
                CornerRadius="10"
                Background="White"
                BorderThickness="1"
                BorderBrush="#CCCCCC"
                Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="로그인" 
                           FontWeight="Bold"
                           FontSize="30"
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- 아이디 입력 -->
                <StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            Margin="0,0,0,15">
                    <TextBlock Text="아이디"
                               Margin="0,0,0,5"/>
                    <TextBox Height="40"
                             FontSize="16"
                             Padding="5"
                             Background="#F9F9F9"
                             BorderThickness="1"
                             BorderBrush="#CCCCCC"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- 비밀번호 입력 -->
                <StackPanel Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,0,0,15">
                    <TextBlock Text="비밀번호"
                               Margin="0,0,0,5"/>
                    <!-- 
                         PasswordBox는 기본적으로 바인딩이 까다롭습니다. 
                         여기서는 단순 예시로 Code-Behind에서 Password를 
                         ViewModel로 전달하거나, 
                         3rd-party 또는 Attached Property를 써서 VM 바인딩 할 수 있습니다.
                    -->
                    <PasswordBox x:Name="PasswordBox"
                                Height="40"
                                FontSize="16"
                                Padding="5"
                                Background="#F9F9F9"
                                BorderThickness="1"
                                BorderBrush="#CCCCCC"/>
                </StackPanel>

                <!-- 로그인 버튼 -->
                <Button Grid.Row="3"
                        Content="로그인"
                        Background="#007ACC"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="45"
                        HorizontalAlignment="Stretch"
                        Margin="0,10,0,0"
                        Click="Button_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
