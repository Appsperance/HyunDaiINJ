<Page x:Class="HyunDaiINJ.Views.MQTT.RealTimeMonitoring"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:HyunDaiINJ.ViewModels.MQTT"
      Title="MQTT Messages">

    <Page.DataContext>
        <vm:MqttViewModel/>
    </Page.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <!-- Quality One 메시지 -->
            <TextBlock Text="Quality One 메시지:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding CurrentMessage.LineId}" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding CurrentMessage.LotId}" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding CurrentMessage.LineId}" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding CurrentMessage.EmployeeNumber}" Margin="0,0,0,15"/>
            <TextBlock Text="{Binding CurrentMessage.StageVal}" Margin="0,0,0,15"/>

            <!-- Quality One 이미지 -->
            <TextBlock Text="Quality One 이미지:" FontWeight="Bold" Margin="0,10,0,5"/>
            <Image Source="{Binding CurrentImage}" Width="800" Height="800" Stretch="Uniform"/>

        </StackPanel>
    </Grid>
</Page>
